  <body>
    <div id="blocker">
      <p>Loading<span class="one">.</span><span class="two">.</span><span class="three">.</span>â€‹</p>
    </div>
    <header id="header">
      <section id="header-top">
        <h1>Actor Classification Trainer</h1>
      </section>
      <section id="header-status">
        <span>Trained:</span><var class="status-value" id="trained-count"><%= count %></var>
      </section>
    </header>
    <div id="page-wrapper">
      <div id="activity-wrapper">
        <h2>Tweet</h2>
        <div id="tweet-placeholder"></div>
        <!-- activity here -->
      </div>
      <div id="actions-wrapper">
        <h2>Actions</h2>
        <button class="blue" data-action="business">Business</button>
        <button class="red" data-action="bot" >Bot</button>
        <button class="green" data-action="market">Person</button>
        <button class="yellow" data-action="spam">SPAM</button>
        <button class="grey" id="next">I give up... NEXT PLEASE!!</button>
      </div>
    </div>
    <script src="/js/jquery-2.1.4.min.js" /></script>
    <script src="/js/business-trainer.js" /></script>
  </body>
